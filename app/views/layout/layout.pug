block mixins
	include ../blocks/mixins
block vars
	-title = 'Site'
	-bodyClass = ''

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title= title
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700,900|Ubuntu:400,500,700")
		link(rel="stylesheet", href="./styles/reset.css")
		link(rel="stylesheet", href="./styles/fontawesome.css")
		link(rel="stylesheet", href="./styles/styles.css")
	body(class=bodyClass)
		block header
			include ../blocks/header
		block banner
			include ../blocks/banner
		block content
			include ../blocks/content
		block script
			include ../blocks/scripts